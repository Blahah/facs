module load bioinfo-tools
module load bowtie
module load fastq_screen

echo "install gd graph"

echo "go to fastq screen directory"

tar zxvf fastq_screen.tar.gz

cd FastQ*

bowtie-build /bubo/home/h16/enze/dev/DRASS/tests/data/reference/U00096.2.fasta Ecoli

perl fastq_screen --bowtie -t Ecoli /bubo/home/h16/enze/dev/DRASS/tests/data/custom/ecoli_k12.fastq

perl fastq_screen --bowtie -t Ecoli /bubo/home/h16/enze/dev/DRASS/tests/data/custom/mouse_bs.fastq

perl fastq_screen --bowtie -t Ecoli /bubo/home/h16/enze/dev/DRASS/tests/data/custom/synthetic454.fastq


